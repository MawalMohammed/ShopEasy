<%- include('partials/header') %>

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active"><%= product.name %></li>
        </ol>
    </nav>

    <div class="row">
        <% const colors = ['#3498db', '#e74c3c', '#2ecc71', '#f39c12', '#9b59b6', '#1abc9c']; %>
        <div class="col-md-6">
            <div class="product-img-placeholder large" style="background-color: <%= colors[(product.id - 1) % colors.length] %>">
                <span><%= product.name.charAt(0) %></span>
            </div>
        </div>
        <div class="col-md-6">
            <h2><%= product.name %></h2>
            <span class="badge bg-secondary mb-3"><%= product.category %></span>
            <p class="lead"><%= product.description %></p>
            <h3 class="text-primary mb-4">$<%= product.price.toFixed(2) %></h3>
            <form action="/cart/add" method="POST">
                <input type="hidden" name="productId" value="<%= product.id %>">
                <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
            </form>
            <a href="/" class="btn btn-outline-secondary mt-2">Back to Products</a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
