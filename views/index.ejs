<%- include('partials/header') %>

<div class="container mt-4">

    <div class="alert promo-banner text-center py-3">
        Use code <strong>SAVE10</strong> for 10% off your order!
    </div>

    <h2 class="mb-4">Our Products</h2>

    <div class="row">
        <% const colors = ['#3498db', '#e74c3c', '#2ecc71', '#f39c12', '#9b59b6', '#1abc9c']; %>
        <% products.forEach((product, i) => { %>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="product-img-placeholder" style="background-color: <%= colors[i % colors.length] %>">
                    <span><%= product.name.charAt(0) %></span>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text text-muted mb-1"><%= product.category %></p>
                    <p class="card-text"><%= product.description %></p>
                    <h5 class="text-primary">$<%= product.price.toFixed(2) %></h5>
                </div>
                <div class="card-footer bg-white border-top-0 pb-3">
                    <a href="/product/<%= product.id %>" class="btn btn-outline-primary me-2">View Details</a>
                    <form action="/cart/add" method="POST" class="d-inline">
                        <input type="hidden" name="productId" value="<%= product.id %>">
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<%- include('partials/footer') %>
