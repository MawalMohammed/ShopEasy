<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Admin - Customer Orders</h2>
        <span class="badge bg-primary fs-6"><%= orders.length %> order(s)</span>
    </div>

    <% if (orders.length === 0) { %>
        <div class="alert alert-info">
            No orders have been placed yet. Orders will appear here once customers complete their purchases.
        </div>
    <% } else { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                    <tr>
                        <td>#<%= order.id %></td>
                        <td><%= order.customerName %></td>
                        <td><%= order.email %></td>
                        <td><%= order.phone %></td>
                        <td><%= order.items.length %> item(s)</td>
                        <td>$<%= order.total.toFixed(2) %></td>
                        <td><%= new Date(order.date).toLocaleDateString() %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>

    <a href="/" class="btn btn-outline-secondary mt-3">Back to Store</a>
</div>

<%- include('../partials/footer') %>
